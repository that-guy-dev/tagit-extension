{
  "name": "Tagit extension",
  "version": "1.0.0",
  "manifest_version": 2,
  "key": "ejfcngmflihodglkhhgchafaejipfmmm",
  "description": "The official tagit extension, save and view later",
  "homepage_url": "http://tagit.io",
  "content_security_policy": "font-src 'self';frame-src 'self';img-src 'self';manifest-src 'self';media-src 'self';object-src 'self';script-src 'self';style-src 'self' 'unsafe-inline';worker-src 'self';",
  "externally_connectable": {
    "matches": ["http://localhost:3000/*", "https://tagit-client.herokuapp.com/*"]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Tagit"
  },
  "background": {
    "scripts": [
      "message.js"
    ],
    "persistent": false
  },
  "oauth2": {
    "client_id": "573420265403-hc69a7r355vc002igjo6dfemj6ac14o4.apps.googleusercontent.com",
    "scopes":["openid"]
  },   
  "permissions": [
    "identity",
    "storage",
    "tabs",
    "chrome://favicon/",    
    "idle",
    "http://localhost:5000/*",
    "https://tagit-api.herokuapp.com/*"   
  ]
}
