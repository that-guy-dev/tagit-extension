{
  "name": "Tagit extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "The official tagit extension, save and view later",
  "homepage_url": "http://extensionizr.com",
  "externally_connectable": {
    "matches": ["http://localhost:3000/*"]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "app/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "tagit extension",
    "default_popup": "index.html"
  },
  "permissions": [
    "contentSettings",
    "contextMenus",
    "cookies",
    "chrome://extensions/",
    /*"fileBrowserHandler",*/
    "tabs",
    "storage",
    "http://localhost:3000/*",
    "http://localhost:5000/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*"
      ],
      "css": [
        "app/inject.css"
      ]
    },
    {
      "matches": [
        "https://www.google.com/*"
      ],
      "js": [
        "app/inject.js"
      ]
    }
  ]  
}
